<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/TvTitle"
        android:text="查询&amp;订阅交易市场行情" />

    <TextView
        style="@style/TvEdTips"
        android:text="交易市场" />

    <EditText
        android:id="@+id/base_transaction"
        style="@style/EtSingleLine"
        android:hint="USDT" />

    <TextView
        style="@style/TvEdTips"
        android:text="相关交易对的币种" />

    <EditText
        android:id="@+id/transaction_pair"
        style="@style/EtSingleLine"
        android:hint="COCOS,TEST" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <TextView
            style="@style/TvEdTips"
            android:text="是否订阅：" />

        <CheckBox
            android:id="@+id/is_subscribed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/getMarketStats"
        style="@style/TvBtn"
        android:text="立即查询" />
</LinearLayout>