<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TvTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TvEdTips1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">@dimen/margin_hor</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TvEdTips">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">@dimen/margin_hor</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EtSingleLine">
        <item name="android:background">@drawable/bg_stroke</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/margin_hor</item>
        <item name="android:layout_marginRight">@dimen/margin_hor</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="EtMultipleLine" parent="EtSingleLine">
        <item name="android:singleLine">false</item>
        <item name="android:minHeight">100dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left|top</item>
    </style>

    <style name="TvBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_hor</item>
        <item name="android:layout_marginRight">@dimen/margin_hor</item>
        <item name="android:background">@drawable/selector_bg_corner_5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Sp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginBottom">25dp</item>
        <item name="android:background">@drawable/bg_stroke</item>
        <item name="android:layout_marginLeft">@dimen/margin_hor</item>
        <item name="android:layout_marginRight">@dimen/margin_hor</item>
    </style>


</resources>
